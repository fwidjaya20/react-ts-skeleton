{
	"compileOnSave": true,
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./",
		"declaration": false,
		"experimentalDecorators": true,
		"noImplicitReturns": true,
		"removeComments": true,
		"jsx": "react",
		"lib": ["es6", "es7", "dom"],
		"importHelpers": true,
		"moduleResolution": "node",
		"module": "esnext",
		"paths": {
			"@skeleton/web/*": ["apps/web/src/*"],
			"@skeleton/cores/*": ["src/cores/*"],
			"@skeleton/domains/*": ["src/domains/*"],
			"@skeleton/shared/*": ["src/shared/*"]
		},
		"sourceMap": true,
		"target": "es5"
	},
	"exclude": ["dist", "node_modules"]
}
